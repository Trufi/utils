{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": ["dom", "es6"],
        "sourceMap": true,
        "strict": true,
        "noEmitHelpers": false,
        "importHelpers": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "declaration": true,
        "outDir": "dist",
        "allowJs": true,
        "checkJs": true
    },
    "include": ["src/**/*"]
}
